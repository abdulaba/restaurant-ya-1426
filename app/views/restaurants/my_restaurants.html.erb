
<div class="container mt-5 shadow p-3">
  <h3>Mis restaurantes</h3>
  <%#= link_to "Agregar", new_restaurant_path, data: {turbo_frame: dom_id(Restaurant.new)}, class: "btn btn-primary btn-sm" %>
  <%#= turbo_frame_tag Restaurant.new %>
  <%#= turbo_frame_tag "restaurants" do %>
    <%= render partial: 'restaurant', collection: @restaurants %>
  <%# end %>
</div>

<!-- Button trigger modal -->
<%= link_to "Agregar", new_restaurant_path, class: "btn btn-primary btn-sm", data: { bs_toggle: "modal", bs_target: "#exampleModal" }%>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
  <%= render "form", restaurant: Restaurant.new%>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>